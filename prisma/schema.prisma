generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── TENANT ────────────────────────────────────────────────────
model Clinic {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  email     String?
  phone     String?
  address   String?
  city      String?
  state     String?
  country   String   @default("IN")
  logoUrl   String?
  timezone  String   @default("Asia/Kolkata")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members        ClinicMember[]
  roles          Role[]
  patients       Patient[]
  appointments   Appointment[]
  treatmentPlans TreatmentPlan[]
  invoices       Invoice[]
  inventoryItems InventoryItem[]
  suppliers      Supplier[]
  documents      Document[]
  auditLogs      AuditLog[]
  subscription   Subscription?

  @@index([slug])
}

// ─── AUTH / USERS ──────────────────────────────────────────────
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  memberships ClinicMember[]
  accounts    Account[]
  sessions    Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── MULTI-TENANCY: CLINIC MEMBERSHIP ──────────────────────────
model ClinicMember {
  id        String   @id @default(cuid())
  clinicId  String
  userId    String
  roleId    String
  isActive  Boolean  @default(true)
  joinedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id])

  dentistProfile DentistProfile?

  @@unique([clinicId, userId])
  @@index([clinicId])
  @@index([userId])
}

// ─── RBAC ──────────────────────────────────────────────────────
model Role {
  id          String   @id @default(cuid())
  clinicId    String
  name        String
  description String?
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())

  clinic      Clinic           @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  permissions RolePermission[]
  members     ClinicMember[]

  @@unique([clinicId, name])
  @@index([clinicId])
}

model Permission {
  id          String @id @default(cuid())
  code        String @unique
  description String?
  module      String

  roles RolePermission[]
}

model RolePermission {
  id           String @id @default(cuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

// ─── DENTIST PROFILE ───────────────────────────────────────────
model DentistProfile {
  id             String  @id @default(cuid())
  clinicMemberId String  @unique
  specialization String?
  licenseNumber  String?
  color          String? @default("#3B82F6")

  clinicMember ClinicMember  @relation(fields: [clinicMemberId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

// ─── PATIENTS ──────────────────────────────────────────────────
model Patient {
  id          String    @id @default(cuid())
  clinicId    String
  firstName   String
  lastName    String
  email       String?
  phone       String?
  dateOfBirth DateTime?
  gender      String?
  bloodGroup  String?
  address     String?
  city        String?
  state       String?
  country     String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  clinic          Clinic           @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  medicalHistory  MedicalHistory?
  allergies       Allergy[]
  appointments    Appointment[]
  treatmentPlans  TreatmentPlan[]
  invoices        Invoice[]
  documents       Document[]
  toothConditions ToothCondition[]
  toothNotes      ToothNote[]

  @@index([clinicId])
  @@index([clinicId, lastName])
}

model MedicalHistory {
  id                 String   @id @default(cuid())
  patientId          String   @unique
  conditions         String?  @db.Text
  medications        String?  @db.Text
  surgeries          String?  @db.Text
  familyHistory      String?  @db.Text
  smokingStatus      String?
  alcoholConsumption String?
  notes              String?  @db.Text
  updatedAt          DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Allergy {
  id        String @id @default(cuid())
  patientId String
  name      String
  severity  String @default("mild")
  notes     String?

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

// ─── DENTAL CHARTING ───────────────────────────────────────────
model ToothCondition {
  id        String   @id @default(cuid())
  patientId String
  toothNum  Int
  condition String
  surface   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

model ToothNote {
  id        String   @id @default(cuid())
  patientId String
  toothNum  Int
  note      String   @db.Text
  createdAt DateTime @default(now())

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

// ─── DOCUMENTS ─────────────────────────────────────────────────
model Document {
  id         String   @id @default(cuid())
  clinicId   String
  patientId  String?
  name       String
  type       String
  url        String
  size       Int?
  mimeType   String?
  uploadedBy String?
  createdAt  DateTime @default(now())

  clinic  Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  patient Patient? @relation(fields: [patientId], references: [id], onDelete: SetNull)

  @@index([clinicId])
  @@index([patientId])
}

// ─── APPOINTMENTS ──────────────────────────────────────────────
enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  ARRIVED
  IN_TREATMENT
  COMPLETED
  NO_SHOW
  CANCELLED
}

model Appointment {
  id               String            @id @default(cuid())
  clinicId         String
  patientId        String
  dentistProfileId String?
  title            String?
  startTime        DateTime
  endTime          DateTime
  status           AppointmentStatus @default(SCHEDULED)
  type             String?
  notes            String?
  reminderEmail    Boolean           @default(true)
  reminderSentAt   DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  clinic           Clinic            @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  patient          Patient           @relation(fields: [patientId], references: [id], onDelete: Cascade)
  dentistProfile   DentistProfile?   @relation(fields: [dentistProfileId], references: [id], onDelete: SetNull)
  appointmentNotes AppointmentNote[]

  @@index([clinicId])
  @@index([clinicId, startTime])
  @@index([dentistProfileId])
}

model AppointmentNote {
  id            String   @id @default(cuid())
  appointmentId String
  note          String   @db.Text
  createdBy     String?
  createdAt     DateTime @default(now())

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

// ─── TREATMENT PLANS ───────────────────────────────────────────
enum TreatmentPlanStatus {
  DRAFT
  PROPOSED
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TreatmentItemStatus {
  PENDING
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model TreatmentPlan {
  id        String              @id @default(cuid())
  clinicId  String
  patientId String
  name      String
  status    TreatmentPlanStatus @default(DRAFT)
  notes     String?             @db.Text
  createdBy String?
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  clinic   Clinic          @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  patient  Patient         @relation(fields: [patientId], references: [id], onDelete: Cascade)
  items    TreatmentItem[]
  invoices Invoice[]

  @@index([clinicId])
  @@index([patientId])
}

model TreatmentItem {
  id              String              @id @default(cuid())
  treatmentPlanId String
  procedure       String
  toothNum        Int?
  cost            Float               @default(0)
  discount        Float               @default(0)
  dentistId       String?
  status          TreatmentItemStatus  @default(PENDING)
  sortOrder       Int                  @default(0)
  scheduledDate   DateTime?
  completedDate   DateTime?
  notes           String?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt

  treatmentPlan TreatmentPlan @relation(fields: [treatmentPlanId], references: [id], onDelete: Cascade)

  @@index([treatmentPlanId])
}

// ─── BILLING ───────────────────────────────────────────────────
enum InvoiceStatus {
  DRAFT
  SENT
  PARTIALLY_PAID
  PAID
  OVERDUE
  CANCELLED
  REFUNDED
}

model Invoice {
  id              String         @id @default(cuid())
  clinicId        String
  patientId       String
  treatmentPlanId String?
  invoiceNumber   String
  subtotal        Float          @default(0)
  taxAmount       Float          @default(0)
  taxRate         Float          @default(0)
  discount        Float          @default(0)
  total           Float          @default(0)
  paidAmount      Float          @default(0)
  status          InvoiceStatus  @default(DRAFT)
  dueDate         DateTime?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  clinic        Clinic         @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  patient       Patient        @relation(fields: [patientId], references: [id], onDelete: Cascade)
  treatmentPlan TreatmentPlan? @relation(fields: [treatmentPlanId], references: [id], onDelete: SetNull)
  items         InvoiceItem[]
  payments      Payment[]

  @@unique([clinicId, invoiceNumber])
  @@index([clinicId])
  @@index([patientId])
}

model InvoiceItem {
  id          String @id @default(cuid())
  invoiceId   String
  description String
  quantity    Int    @default(1)
  unitPrice   Float  @default(0)
  total       Float  @default(0)

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model Payment {
  id        String   @id @default(cuid())
  invoiceId String
  amount    Float
  method    String
  reference String?
  notes     String?
  isRefund  Boolean  @default(false)
  createdAt DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

// ─── INVENTORY (Pro feature) ───────────────────────────────────
model InventoryItem {
  id           String  @id @default(cuid())
  clinicId     String
  name         String
  sku          String?
  category     String?
  unit         String  @default("pcs")
  currentStock Int     @default(0)
  minStock     Int     @default(5)
  costPrice    Float   @default(0)
  sellPrice    Float   @default(0)
  supplierId   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clinic         Clinic          @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  supplier       Supplier?       @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  stockMovements StockMovement[]

  @@index([clinicId])
}

model StockMovement {
  id              String   @id @default(cuid())
  inventoryItemId String
  type            String
  quantity        Int
  reason          String?
  createdBy       String?
  createdAt       DateTime @default(now())

  inventoryItem InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)

  @@index([inventoryItemId])
}

model Supplier {
  id       String  @id @default(cuid())
  clinicId String
  name     String
  email    String?
  phone    String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clinic         Clinic          @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  inventoryItems InventoryItem[]

  @@index([clinicId])
}

// ─── SUBSCRIPTION / BILLING ────────────────────────────────────
enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELLED
  UNPAID
  INCOMPLETE
}

enum PlanType {
  TRIAL
  BASIC
  PRO
  ENTERPRISE
}

model Subscription {
  id                 String             @id @default(cuid())
  clinicId           String             @unique
  stripeCustomerId   String?
  stripeSubId        String?
  stripePriceId      String?
  plan               PlanType           @default(TRIAL)
  status             SubscriptionStatus @default(TRIALING)
  trialEndsAt        DateTime?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean            @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([stripeCustomerId])
  @@index([stripeSubId])
}

// ─── AUDIT LOG ─────────────────────────────────────────────────
model AuditLog {
  id        String   @id @default(cuid())
  clinicId  String
  userId    String?
  action    String
  entity    String
  entityId  String?
  metadata  String?  @db.Text
  ipAddress String?
  createdAt DateTime @default(now())

  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@index([clinicId, action])
  @@index([createdAt])
}
